@using Microsoft.AspNetCore.Authentication

<div class="panel" style="margin-top: 20px; margin-bottom: 20px">
    <a class="btn btn-dark" href="~/Home/GetApiData">Get API Data</a>
    @*<a class="btn btn-primary" href="~/Home/RenewTokens">Renew Tokens</a>*@
</div>

<h2>Claims</h2>
<dl>
    @foreach (var claim in User.Claims)
    {
        <dt class="word-wrap">@claim.Type</dt>
        <dd class="word-wrap">@claim.Value</dd>
    }
</dl>

<h2>Properties</h2>
<dl>
    @foreach (var prop in (await Context.AuthenticateAsync()).Properties.Items)
    {
        <dt class="word-wrap">@prop.Key</dt>
        <dd class="word-wrap">@prop.Value</dd>
    }
</dl>
